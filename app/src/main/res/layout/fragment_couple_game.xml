<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.xuf.www.gobang.widget.GoBangBoard
        android:id="@+id/go_bang_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@id/go_bang_board"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/chess_black" />

    <ImageView
        android:id="@+id/iv_white_chess"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/go_bang_board"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/chess_white" />

    <LinearLayout
        android:layout_below="@id/iv_white_chess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_start_first"
            android:background="#1E88E5"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/go_bang_board"
            android:layout_marginRight="25dp"
            android:text="白子先手" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_start_game"
            android:background="#1E88E5"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/go_bang_board"
            android:layout_marginRight="25dp"
            android:text="开始游戏" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_exit_game"
            android:background="#1E88E5"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_alignLeft="@id/btn_start_game"
            android:layout_below="@id/btn_start_game"
            android:text="退出游戏" />
    </LinearLayout>

</RelativeLayout>